                document.getElementById("demo").innerHTML = xhttp.responseText;
            }
        };
        xhttp.open("POST", "/");
        xhttp.setRequestHeader('Content-type', 'application/x-www-form-urlencoded');
        xhttp.send("click=" + #{title[1].id});
        window.location.reload();
    }
    var accessLink3 = function() {
        window.open('#{title[2].data}');
        var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                // Typical action to be performed when the document is ready:
                document.getElementById("demo").innerHTML = xhttp.responseText;
            }
        };
        xhttp.open("POST", "/");
        xhttp.setRequestHeader('Content-type', 'application/x-www-form-urlencoded');
        xhttp.send("click=" + #{title[2].id});
        window.location.reload();
    }
  div(class="row")
    div(class="column")
      h2 #{title[0].name}
      h2 #{title[0].abstract}
      button(onclick = 'accessLink1()') link to paper
    div(class="column")
      h2 #{title[1].name}
      h2 #{title[1].abstract}
      button(onclick = 'accessLink2()') link to paper
    div(class="column")
      h2 #{title[2].name}
      h2 #{title[2].abstract}
      button(onclick = 'accessLink3()') link to paper

